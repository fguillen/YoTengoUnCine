<%= form_for [:admin, @donation], :html => { :class => "form-horizontal" } do |f| %>
  <%= render "/admin/shared/form_errors", :object => f.object %>

  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :email, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :token, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :token, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :payer_id, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_id, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :description, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :amount, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :amount, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :kind, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :kind, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :transaction_id, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :transaction_id, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :chair_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :chair_name, :class => "span5" %>
    </div>
  </div>

  <h3>Payer</h3>

  <div class="control-group">
    <%= f.label :payer_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_name, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :payer_email, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_email, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :payer_address_street, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_address_street, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :payer_address_zip, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_address_zip, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :payer_address_country_code, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_address_country_code, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :payer_address_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_address_name, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :payer_address_city, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_address_city, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :payer_address_state, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :payer_address_state, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

